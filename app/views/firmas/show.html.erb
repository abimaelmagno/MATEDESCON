
<main id="status">
  <div class="container my-4 p-3">
    <p class="text-end fst-italic">Área de atuação: <%= @firma.sector %></p>
    <h1 class="text-center fw-bold"><%= @firma.name %></h1>
  </div>

  <div class="container-fluid my-4 p-3">
    <h5><strong>Mês:</strong> <%= %></h5>
    <h5><strong>Capital:</strong> <%= @firma.capital %></h5>
    <h5><strong>Estoque:</strong> <%= @firma.product %></h5>
  </div>

  <div class="container-fluid">
    <h5><strong>Previsão para o próximo mês:</strong></h5>
    <p> Digite aqui a previsão!</p>
  </div>
  
  <div class= "d-flex mt-5 justify-content-around">
    <p type="button" class="btn btn-warning"><%= link_to 'Estoque / Comprar', firma_fornecedores_path(@firma) %></p>
    <p type="button" class="btn btn-success"><%= link_to 'Girar mês / Vender', firma_path(@firma, notice:"Teste")%></p>
  </div>
</div>
