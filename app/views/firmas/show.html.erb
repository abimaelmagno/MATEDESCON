
<div class="container my-4 p-3">
  <p class="text-right font-italic">Área de atuação: <%= @firma.sector %></p>
  <h1 class="text-center font-weight-bold"><%= @firma.name %></h1>
</div>

  <div class="container text-left">

      <h5>Mês: <%= %></h5>
      <h5>Capital:<%= @firma.capital %></h5>
      <h5>Estoque:<%= @firma.product %></h5>
    </div>
  
    <div class="d-flex mt-5 justify-content-around">
      <p type="button" class="btn btn-primary"><%= link_to 'Estoque / Comprar', firma_fornecedores_path(@firma) %></p>
      <p type="button" class="btn btn-success"><%='Girar mês / Vender'%></p>
    </div>
  </div>

<div class="alert alert-warning alert-dismissible fade show" role="alert">
  Vendas do mês: <strong><%= %> unidades</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

